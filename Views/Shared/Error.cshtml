@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Error</h1>
<h2 class="text-danger">Ocurrió un error al procesar tu solicitud.</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

<h3>Modo Desarrollo</h3>
<p>
    Cambiando a <strong>Desarrollo</strong> se mostrará más información detallada sobre el error.
</p>
<p>
    <strong>No active el modo desarrollo en aplicaciones en producción.</strong>
</p>