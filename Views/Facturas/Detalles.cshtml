@model Factura
@{
    ViewData["Title"] = $"Factura {Model.Numero}";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h3>Factura @Model.Numero</h3>
    </div>
    <div class="card-body">
        <div class="row mb-4">
            <div class="col-md-6">
                <h5>Datos de la Empresa</h5>
                <p><strong>@Model.Empresa.Nombre</strong></p>
                <p>@Model.Empresa.Direccion</p>
                <p>NIF: @Model.Empresa.Cif</p>
            </div>
            <div class="col-md-6 text-end">
                <h5>Datos del Cliente</h5>
                <p><strong>@Model.Cliente.Nombre</strong></p>
                <p>@Model.Cliente.Direccion</p>
                <p>NIF: @Model.Cliente.NIF</p>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <p><strong>Fecha de emisión:</strong> @Model.Fecha.ToString("dd/MM/yyyy")</p>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Producto</th>
                    <th class="text-end">Cantidad</th>
                    <th class="text-end">Precio Unitario</th>
                    <th class="text-end">IVA %</th>
                    <th class="text-end">Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var linea in Model.Lineas)
                {
                    <tr>
                        <td>@linea.Producto.Nombre</td>
                        <td class="text-end">@linea.Cantidad</td>
                        <td class="text-end">@linea.PrecioUnitario.ToString("C")</td>
                        <td class="text-end">@linea.IvaPorcentaje.ToString("0")%</td>
                        <td class="text-end">@((linea.Cantidad * linea.PrecioUnitario).ToString("C"))</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="4" class="text-end"><strong>Base Imponible:</strong></td>
                    <td class="text-end">@Model.BaseImponible.ToString("C")</td>
                </tr>
                <tr>
                    <td colspan="4" class="text-end"><strong>Total IVA:</strong></td>
                    <td class="text-end">@Model.TotalIva.ToString("C")</td>
                </tr>
                <tr class="table-active">
                    <td colspan="4" class="text-end"><strong>Total Factura:</strong></td>
                    <td class="text-end"><strong>@Model.Total.ToString("C")</strong></td>
                </tr>
            </tfoot>
        </table>
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
    </div>
</div>